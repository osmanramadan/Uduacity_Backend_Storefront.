        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^17.0.21",
        "@types/pg": "^8.6.6",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
