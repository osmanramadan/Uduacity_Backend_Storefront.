{
    "name": "storefront_backend",
    "version": "1.1.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "prebuild": "rimraf build",
        "build": "yarn prebuild && npx tsc",
        "watch": "tsc-watch --esModuleInterop src/index.ts --outDir ./build --onSuccess \"node ./build/index.js\"",
        "prettier": "prettier --config .prettierrc.json src/*.ts --write",
        "lint": "eslint . --fix --ext  .ts",
        "start_server": "nodemon src/index.ts",
        "jasmine": "jasmine",
        "resetdb": "db-migrate reset && db-migrate up",
        "test1": "npm run resetdb && npm run build && npm run jasmine",
        "test2": "setx var NODE_ENV=test && npx tsc && db-migrate --env test up && jasmine && db-migrate db:drop test"
    },
    "author": "osman",
    "license": "ISC",
    "dependencies": {
        "@types/cors": "^2.8.13",
        "bcrypt": "^5.1.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.3",
        "jsonwebtoken": "^9.0.0",
        "pg": "^8.8.0",
        "typescript": "^4.9.4"
    },
    "devDependencies": {
