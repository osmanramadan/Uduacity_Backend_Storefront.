        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.32.2",
        "jasmine": "^4.0.2",
        "jasmine-spec-reporter": "^7.0.0",
        "jasmine-ts": "^0.4.0",
